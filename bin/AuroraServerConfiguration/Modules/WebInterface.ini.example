[WebInterface]

	;; The web interface to use
	;; BuiltIn gives you a loginscreen automatically
	;; Default is BuiltIn
	Module = BuiltIn
	
	;; 
	;; All following options are for the built in web interface only
	;;
	
	;; The default langugae for the interface to be in
	;; Valid options are
	;; en, fr, de, es, it
	DefaultLanguage = en
	
	;; The port to run the web interface on
	;; Recommended is 8002, but if you want it to look like a normal website, use 80
	Port = 8002
	
	;;
	;; Welcome Screen
	;; You can access this at 
	;; http://your server IP:port/welcomescreen/
	;;

	;; News items on the login screen
	;; 
	;; To add news to the login screen, type "web add news item" into the console
	;; To remove news from the login screen, type "web remove news item" into the console
	
	;; Grid status/Special Info Window information
	;; 
	;; To change these items, point your browser to 
	;; http://your server IP:port/welcomescreen/admin/
	;; and login when prompted.
